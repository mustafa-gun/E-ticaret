                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-md-12 mt-3">
            <div class="card">
                <div class="row m-3">
                    @foreach (Urunler item in Model.Urunler)
                    {
                        @if (item.UrunID == urunId)
                        {
                            @Html.Raw(item.UrunAciklamasi)
                        }
                    }
                </div>
            </div>
        </div>
        
    </div>

</div>