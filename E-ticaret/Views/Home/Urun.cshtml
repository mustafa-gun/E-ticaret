@{
    Guid urunId = new Guid(Context.Request.RouteValues["id"].ToString());
}

<div class="raw">
    @if (Model != null)
    {
        @foreach (Urunler item in Model.Urunler)
        {
            @if (item.UrunID == urunId)
            {
                <div class="col-md-12">
                    <h3>@item.UrunAdi</h3>
                </div>
                <div class="col-md">

                    <img src="~/@item.GorselURL" />

                </div>
            }

        }
    }
</div>