<ul class="navbar-nav">

    @if (Model != null)
    {
        @foreach (Menu menu in Model.Menu)
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" asp-controller="menu" asp-action="detay" asp-route-id="@menu.MenuId">@menu.MenuName</a>
                <ul class="dropdown-menu">
                    @foreach (AltMenu altMenu in Model.AltMenu)
                    {
                        @if (menu.MenuId == altMenu.AnaMenuId)
                        {
                            <li>
                                <a class="dropdown-item" href="/menu/detay/@menu.MenuId/@altMenu.AltMenuId">@altMenu.AltMenuName</a>
                            </li>
                        }
                    }
                </ul>
            </li>
        }
    }
</ul>
